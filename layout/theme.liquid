    <script>
const productsContainerDOM = document.querySelector('#products-container')
const loaderContainerDOM = document.querySelector('.loader')


let pagina = 1

const pegarProducts = async () => {
  const resposta = await
  fetch(`https://fakestoreapi.com/products?_limit=5 &_page=${pagina}`)
  return resposta.json()
}

const gerarProductsTemplate = products => products.map(({
  id,
  title,
  price,
  image
}) => `
  <div class="col-lg-3  card bg-dark text-white mt-3 text-center m-5 "><h2> ${id}</h2>
  <img class="card-img-top" src="${image}" alt="Card image cap">
     <span class="product-title card-title"><h4>${title}</h4></span>
     <span class="product-body card-body "><h4>$${price}</h4></span>
  </div>
 `).join('') 
const addProductsEmDOM = async () => {
  const products = await pegarProducts()
  const productsTemplate = gerarProductsTemplate(products)

  productsContainerDOM.innerHTML += productsTemplate
}

const pegarProximoProducts = () => {
  setTimeout(() => {
    pagina++
    addProductsEmDOM()
  },0 )
}

const mostrarLoader = () => {
  loaderContainerDOM.classList.add('show')
  removeLoader()
}

const removeLoader = () => {
  setTimeout(() => {
    loaderContainerDOM.classList.remove('show')
    pegarProximoProducts()
  }, 0)
}

const Pagination = () => {
  const {
    clientHeight,
    scrollHeight,
    scrollTop
  } = document.documentElement
  const InferiorPagina = scrollTop + clientHeight >=
    scrollHeight - 10

  if (InferiorPagina) {
    mostrarLoader()
  }
}

//closures 
const mostrarValorInput = inputValor => product => {
  const productTitle = product.querySelector('.product-title').textContent.toLocaleLowerCase()
  const productBody = product.querySelector('.product-body').textContent.toLocaleLowerCase()

  if (productTitle.includes(inputValor) ||
    productBody.includes(inputValor)) {
    product.style.display = 'flex'
    return
  }
  product.style.display = 'none'
}

//objeto event
const handleInputValue = event => {
  const inputValor = event.target.value
  const products = document.querySelectorAll('.product')

  products.forEach(mostrarValorInput(inputValor))
}

addProductsEmDOM()

window.addEventListener('scroll', Pagination)
